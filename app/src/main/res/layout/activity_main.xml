<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABEBE6"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/topic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_android_black_24dp"/>

    <TextView

        android:id="@+id/topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANDROID DEVELOPMENT"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mentors"
        android:layout_below="@id/main"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:text="Mentors"/>

    <LinearLayout
        android:id="@+id/details1"
        android:layout_below="@+id/mentors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kf"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KUNAL FARMAH"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:id="@+id/kfnum"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9654211634"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/details2"
            android:layout_below="@+id/details1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/sk"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHIVAM KUMAR"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:id="@+id/sknum"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9654211634"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details2"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:text="GOT A LAPTOP ?"/>

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/ic_launcher_background"
        android:textColor="#ffff"
        android:text="IF NOT DON'T WORRY,
  BUY IT HERE!!!"
        android:textAlignment="center"
        android:layout_below="@+id/details2"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>